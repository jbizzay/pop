
doctype html
html(lang='en', ng-app='app')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, user-scalable=no')

        title(ng-bind="title + ' | Pop'")

        base(href='/')

        link(rel='shortcut icon', href='favicon.ico')

        // inject:vendor:css
        // endinject

        // inject:css
        // endinject

    body(ng-class="bodyClass()")

        div.growl-container(growl)

        div#spinner(style="display: none")

        div.navbar.navbar-default.navbar-fixed-top
            .container
                .navbar-header
                    a.navbar-toggle-slideout(href="#", ng-click="toggleNav('left')")
                        i.fa.fa-bars

                    a.navbar-brand.text-shadow(href="/") POP

                h1.page-title.text-shadow(ng-bind="title")

                div.navbar-collapse.collapse(user-menu)

        div.view(ng-view)

        div.subnav.subnav-left.ng-hide(nav-menu, ng-show="showNav == 'left'")
        div.subnav.subnav-right.ng-hide(nav-menu-right, ng-show="showNav == 'right'")

        // inject:vendor:js
        // endinject

        // inject:js
        // endinject

        script(type="text/javascript").
            angular.module('app').constant('CSRF_TOKEN', 'INJECT_CSRF_TOKEN');
