.container
    .row
        .col-md-12
            div(ncy-breadcrumb)

    ui-view
        .row
            .col-md-12
                h3 Admin Dashboard

        .row

            .col-md-6
                h3 Stats
                table.table.table-striped
                    tbody
                        tr
                            td
                                b # Users
                            td 1,992
                        tr
                            td
                                b # Users online
                            td 112
                        tr
                            td
                                b # Posts
                            td 215,888
                        tr
                            td
                                b # Posts today
                            td 512

            .col-md-6
                h3 Server
                table.table.table-striped
                    tbody
                        tr
                            td
                                b Status
                            td(style='color: green') Good &nbsp;
                                a(href='#') more
                        tr
                            td
                                b File system
                            td(style='color: green') Writable
                        tr
                            td
                                b Storage
                            td(style='color: green') 5.12 GB / 50 GB
                        tr
                            td
                                b Top
                            td(style='color: dark-yellow') Load 0.35 CPU 54% Mem 89%

        .row
            .col-md-12
                h3 Admin Modules

        .row
            .col-md-3(ng-repeat="module in modules")
                a(ui-sref="{{ module.sref }}") {{ module.label }}
