
.container

    .well

        form.form(name="contactForm", role="form", novalidate, ng-submit="submit()", ng-class="{ 'show-errors': showErrors }")

            .alert.alert-danger(ng-show="showErrors")
                p
                    b Please correct the following errors:
                ul.list-unstyled(ng-repeat="error in errors")
                    li {{ error }}
                .list-unstyled(form-errors)

            .form-group
                label(for="name") Name *
                input.form-control#name(type="text", name="name", placeholder="Name", ng-model="contact.name", required)

            .form-group
                label(for="email") Email Address *
                input.form-control#email(type="email", name="email", placeholder="Email address", ng-model="contact.email", required)

            .form-group
                label(for="subject") Subject *
                input.form-control#subject(type="text", name="subject", placeholder="Subject", ng-model="contact.subject", required)

            .form-group
                label(for="message") Message *
                textarea.form-control#message(name="message", placeholder="Message", ng-model="contact.message", required)

            div.form-group
                i We'll send a copy to your email address

            .button-group
                button.btn.btn-primary(type="submit") Submit
